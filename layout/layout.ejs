<!DOCTYPE html>
<html lang="<%= config.language %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><% if (page.title) { %><%= page.title %> | <% } %><%= config.title %></title>
    <%- css('css/style') %>
</head>
<body>
    <header>
        <nav>
            <h1><a href="<%- url_for() %>"><%= config.title %></a></h1>
            <ul>
                <% for (let link in theme.menu) { %>
                <li><a href="<%- url_for(theme.menu[link]) %>"><%= link %></a></li>
                <% } %>
            </ul>
        </nav>
    </header>

    <main>
        <%- body %>
    </main>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> <%= config.author || config.title %></p>
    </footer>

    <%- js('js/script') %>
</body>
</html>
